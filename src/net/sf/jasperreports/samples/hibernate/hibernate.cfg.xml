<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="connection.url">jdbc:hsqldb:res:/defaults/hsqldb/test</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"></property>
        <property name="dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="connection.pool_size">1</property>
        <property name="show_sql">true</property>
        <property name="hibernate.current_session_context_class">thread</property>
		<property name="hibernate.connection.provider_class">net.sf.jasperreports.data.hibernate.HibernateConnectionProvider</property>        
        <mapping resource="net/sf/jasperreports/samples/hibernate/Address.hbm.xml"/>
        <mapping resource="net/sf/jasperreports/samples/hibernate/Document.hbm.xml"/>
    </session-factory>
</hibernate-configuration>